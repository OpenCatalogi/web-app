{
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "parser": "json",
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": true
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "parser": "typescript",
        "printWidth": 120,
        "trailingComma": "all",
        "tabWidth": 4,
        "useTabs": true,
        "singleQuote": false
      }
    },
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "parser": "css",
        "tabWidth": 4,
        "useTabs": true,
        "printWidth": 180
      }
    }
  ]
}
